
@{
    ViewData["Title"] = "Login";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<style>
    .field-validation-error {
        color: red;
    }
</style>
@model LoginVewModel
<div class="customer-login-register">
    <h3>ورود</h3>
    <div class="login-Register-info">
        <form asp-action="LoginConfirm" asp-controller="Account">
            <p class="coupon-input form-row-first">
                <label>نام کاربری یا ایمیل <span class="required">*</span></label>
                <input type="text" asp-for="UserName">
                <span asp-validation-for="UserName"></span>
            </p>
            <p class="coupon-input form-row-last">
                <label>رمز عبور <span class="required">*</span></label>
                <input type="password"asp-for="Password">
                <span asp-validation-for="Password"></span>
            </p>
            <div class="clear"></div>
            <p>
                <button value="Login" name="login" class="button-login" type="submit">ورود</button>
                <label><input type="checkbox" value="1"><span>به خاطر سپاری</span></label>
                <a href="#" class="lost-password">رمز عبور خود را فراموش کرده اید؟</a>
            </p>
        </form>
    </div>
</div>
